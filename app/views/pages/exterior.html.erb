<div class = "container narrow margin-top-height-navbar">
  <h1 class = "text-center green-font"><%= t('gallery.interiors') %></h1>
  <%= render "shared/gallery-links" %>
  <!-- swipebox images -->
  <div class="row">
    <% for i in 1..29 %>
      <div class="col-xs-12 col-sm-6 col-md-4 col-sm-3">
        <div class="cl-image-container">
          <%= link_to image_path("Exterior #{i}.jpg"), :class => "cl-image-pages swipebox", :alt => "image", :title => "Exterior" do %>
            <%= image_tag("Exterior small #{i}.jpg") %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
  <!-- links -->
  <%= link_to gallery_path do %>
    <div class="back-gallery-button">
      <i class="fi-rewind"></i> <%= t('gallery.back') %>
    </div>
  <% end %>
</div>
