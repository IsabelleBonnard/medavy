<!-- Video pour les tablettes et ordis -->
<div class="margin-top-height-navbar">
  <%= video_tag "http://res.cloudinary.com/dsosadxbk/video/upload/v1491490317/Medavy_-_Tour_Circulaire_rapide_stvusp.mp4", autoplay: true, muted: true, id: "video-background"%>
</div>
<!-- Image pour les smart phones -->
<div class="banner" style="background-image: linear-gradient(-0deg, rgba(0, 0, 0, 0.5) 0%, rgba(39, 222, 241, 0.2) 50%), url('<%= image_path "Exterior 1.jpg" %>');" id="image-background">
</div>

<!-- cards-video -->

  <div class="container cards-video">
    <div class=" text-center features">
      <div class="row">

        <div class="col-xs-12 col-sm-4 col-md-2 col-md-offset-1">
          <%= link_to gallery_exterior_path do %>
            <div class="card-video">
              <i class="fi-foot"></i>
              <h4> <%= t('gallery.exterior') %></h4>
            </div>
          <% end %>
        </div>

        <div class="col-xs-12 col-sm-4 col-md-2">
          <%= link_to gallery_interiors_path do %>
            <div class="card-video">
              <i class="fi-crown"></i>
              <h4><%= t('gallery.interiors')%></h4>
            </div>
          <% end %>
        </div>

        <div class="col-xs-12 col-sm-4 col-md-2">
          <%= link_to gallery_work_path do %>
            <div class="card-video">
              <i class="fi-flag"></i>
              <h4><%= t('gallery.work')%></h4>
            </div>
          <% end %>
        </div>

        <div class="col-xs-12 col-sm-4 col-sm-offset-2 col-md-offset-0 col-md-2">
          <%= link_to gallery_SkyViews_path do %>
            <div class="card-video">
              <i class="fi-play"></i>
              <h4><%= t('gallery.sky_views')%></h4>
            </div>
          <% end %>
        </div>

        <div class="col-xs-12 col-sm-4 col-md-2">
          <%= link_to gallery_MedavyByNight_path do %>
            <div class="card-video">
              <i class="fi-lightbulb"></i>
              <h4><%= t('gallery.medavy_by_night')%></h4>
            </div>
          <% end %>
        </div>

      </div>
    </div>
  </div>

