<div class="banner margin-top-height-navbar" style="background-image: linear-gradient(-0deg, rgba(0, 0, 0, 0.5) 0%, rgba(39, 222, 241, 0.2) 50%), url('<%= image_path "banner.JPG" %>');">
  <div class="banner-content">
    <h1> <%= t('root.intro')%> </h1>
  </div>
</div>


<!-- map -->
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6">
      <h2 class="title text-center"> <%= t('root.welcome') %></h2>
      <p><%= t('root.open1_html') %></p>
      <p><%= t('root.open2_html') %></p>
      <p><%= t('root.open3_html') %></p>
      <p><%= t('root.open4_html') %></p>
      <p><%= t('root.open5_html') %></p>
    </div>
    <div class="col-xs-12 col-sm-6">
      <div id="map">
      </div>
      <div class = "text-center">
        <%= link_to "https://www.google.com/maps/dir//Ch%C3%A2teau+de+M%C3%A9davy,+Le+Ch%C3%A2teau,+M%C3%A9davy,+France/@48.6785475,0.0271894,12z/data=!3m1!4b1!4m8!4m7!1m0!1m5!1m1!1s0x47e203cd31f6a15d:0x8ebcdecec71385ab!2m2!1d0.0974007!2d48.6785688", target: :_blank do %>
          <div class="btn-go">
            <i class="fi-map"></i>
            <%= t('root.go') %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- cards-home -->
<div class="wrapper wrapper-home">
  <div class="container narrow">
    <div class=" text-center features">
      <div class="row">
        <h2 class="title text-center"> <%= t('root.know_more') %></h2>
        <div class="col-xs-6 col-md-3 ">
          <%= link_to history_path do %>
            <div class="card-home">
              <i class="fi-plus"></i>
              <h4> <%= t('root.history') %></h4>
              <p><%= t('root.know_more') %></p>
            </div>
          <% end %>
        </div>

        <div class="col-xs-6 col-md-3">
          <%= link_to gallery_path do %>
            <div class="card-home">
              <i class="fi-photo"></i>
              <h4><%= t('root.visuals')%></h4>
              <p><%= t('root.discover')%></p>
            </div>
          <% end %>
        </div>

        <div class="col-xs-6 col-md-3">
          <%= link_to quizz_path do %>
            <div class="card-home">
              <i class="fi-play"></i>
              <h4><%= t('root.play')%></h4>
              <p><%= t('root.have_fun') %></p>
            </div>
          <% end %>
        </div>

        <div class="col-xs-6 col-md-3">
          <%= link_to new_message_path do %>
            <div class="card-home">
              <i class="fi-mail"></i>
              <h4><%= t('root.questions')%></h4>
              <p><%= t('root.contact')%></p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

