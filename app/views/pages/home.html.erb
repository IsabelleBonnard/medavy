<div class="banner margin-top-height-navbar" style="background-image: linear-gradient(-0deg, rgba(0, 0, 0, 0.5) 0%, rgba(39, 222, 241, 0.2) 50%), url('<%= image_path "banner.JPG" %>');">
  <div class="banner-content">
    <h1> <%= t('root.welcome')%> </h1>
  </div>
</div>
<!-- cards-home -->
<div class="wrapper wrapper-home">
  <div class="container narrow">
    <div class=" text-center features">
      <div class="row">
        <h2 class="title"> <% %></h2>

        <div class="col-xs-12 col-sm-6 col-md-3 ">
          <%= link_to history_path do %>
            <div class="card-home">
              <i class="fi-plus"></i>
              <h4> <%= t('root.history') %></h4>
              <p><%= t('root.know_more') %></p>
            </div>
          <% end %>
        </div>

        <div class="col-xs-12 col-sm-6 col-md-3">
          <%= link_to gallery_path do %>
            <div class="card-home">
              <i class="fi-photo"></i>
              <h4><%= t('root.visuals')%></h4>
              <p><%= t('root.discover')%></p>
            </div>
          <% end %>
        </div>

        <div class="col-xs-12 col-sm-6 col-md-3">
          <%= link_to quizz_path do %>
            <div class="card-home">
              <i class="fi-play"></i>
              <h4><%= t('root.play')%></h4>
              <p><%= t('root.have_fun') %></p>
            </div>
          <% end %>
        </div>

        <div class="col-xs-12 col-sm-6 col-md-3">
          <%= link_to contact_path do %>
            <div class="card-home">
              <i class="fi-mail"></i>
              <h4><%= t('root.questions')%></h4>
              <p><%= t('root.contact')%></p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>



