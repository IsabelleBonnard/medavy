<div class="banner" style="background-image: url('<%= image_path "banner new middle.JPG" %>');">
  <div class="banner-text">
    <div class="logo-text">
      <div class="logo-text-1">
        <p>Ch√¢teau de </p>
      </div>
      <div class="logo-text-2">
        <h1>Medavy</h1>
      </div>
    </div>
    <div class="logo-subtitle"> <p> <%= t('root.intro')%> </p></div>
  </div>
</div>


<div class="wrapper wrapper-home">
  <div class="container narrow">
    <!-- map -->
    <h2 class="title text-center"> <%= t('root.welcome') %></h2>
    <p class="large-margin-bottom"><%= t('root.open0_html') %></p>
    <div class="map-box">
      <div class="map-left">
        <div class="intro-text" id = "leftdiv">
          <div class="opening-hours">
            <h4><%= t('root.schedule') %></h4>
            <p><%= t('root.open1_html') %></p>
            <p><%= t('root.open2_html') %></p>
            <p><%= t('root.open3_html') %></p>
          </div>
        </div>
        <div class = "text-center">
          <div class="btn-phone">
            <i class="fi-telephone"></i>
            <%= t('root.telephone') %>
          </div>
        </div>
      </div>
      <div class="map-right">
        <div id="map">
        </div>
        <div class = "text-center">
          <%= link_to "https://www.google.com/maps/dir//Ch%C3%A2teau+de+M%C3%A9davy,+Le+Ch%C3%A2teau,+M%C3%A9davy,+France/@48.6785475,0.0271894,12z/data=!3m1!4b1!4m8!4m7!1m0!1m5!1m1!1s0x47e203cd31f6a15d:0x8ebcdecec71385ab!2m2!1d0.0974007!2d48.6785688", target: :_blank do %>
            <div class="btn-go">
              <i class="fi-map"></i>
              <%= t('root.go') %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
  <!-- visits -->
<div class="wrapper wrapper-home bg-light-green padding-margin-visits">
  <div class="container narrow">
    <div class="row">
      <h2 class="title text-center"> <%= t('root.visits') %></h2>
      <p class="text-center green-font negative-top-margin"><%= t('root.details') %></p>
      <!-- park -->
      <div class="col-xs-12 col-sm-4">
        <div class="visits-all">
          <div class="image-visits" id="image-park" style="background-image: linear-gradient(-0deg, rgba(0, 0, 0, 0.5) 0%, rgba(39, 222, 241, 0.2) 62%), url('<%= image_path "Medavy 88 middle.JPG" %>'); background-size: cover;">
            <div class="banner-content visits-content">
              <h3> <%= t('root.park')%> </h3>
            </div>
          </div>
          <div class="details-box hidden" id="details-box-park">
            <p class="margin-top"><%= t('root.park_description') %></p>
            <ul>
              <li> <%= t('root.non-guided') %> </li>
              <li> <%= t('root.park_price') %> </li>
            </ul>
          </div>
        </div>
      </div>
      <!-- castle -->
      <div class="col-xs-12 col-sm-4">
        <div class="visits-all">
          <div class="image-visits" id="image-castle" style="background-image: linear-gradient(-0deg, rgba(0, 0, 0, 0.5) 0%, rgba(39, 222, 241, 0.2) 62%), url('<%= image_path "Medavy 329 middle.JPG" %>'); background-size: cover;">
            <div class="banner-content visits-content">
              <h3> <%= t('root.castle')%> </h3>
            </div>
          </div>
          <div class="details-box hidden" id="details-box-castle">
            <p class="margin-top"><%= t('root.castle_description') %></p>
            <ul>
              <li> <%= t('root.guided') %> </li>
              <li> <%= t('root.length_castle') %> </li>
              <li> <%= t('root.limit_castle') %> </li>
              <li> <%= t('root.last_visit') %> </li>
              <li> <%= t('root.castle_price') %> </li>
            </ul>
          </div>
        </div>
      </div>
      <!-- tour -->
      <div class="col-xs-12 col-sm-4">
        <div class="visits-all">
          <div class="image-visits" id="image-peter" style="background-image: linear-gradient(-0deg, rgba(0, 0, 0, 0.5) 0%, rgba(39, 222, 241, 0.2) 62%), url('<%= image_path "Medavy 117 middle.JPG" %>'); background-size: cover;">
            <div class="banner-content visits-content">
              <h3> <%= t('root.peter_tour')%> </h3>
            </div>
          </div>
          <div class="details-box hidden" id="details-box-peter">
            <p class="margin-top"><%= t('root.peter_description') %></p>
            <ul>
              <li> <%= t('root.guided') %> </li>
              <li> <%= t('root.rdv_peter') %> </li>
              <li> <%= t('root.length_peter') %> </li>
              <li> <%= t('root.limit_peter') %> </li>
              <li> <%= t('root.comments_peter') %> </li>
              <li> <%= t('root.peter_price') %> </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
