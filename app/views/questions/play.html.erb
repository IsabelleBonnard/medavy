              <%= form_tag(questions_path(@question.id + 1), method: "post") do %>
                <input name="start_date" type="hidden" value=<%= params[:start_date] %> />
                <input name="correct" type="hidden" value=<%= params[:correct].to_i + 1 %> />
                <input name="commit" type="submit" class="submit_questions" value="<%= choice.intitule %>" />
              <% end %>
            <% else %>
              <%= form_tag(questions_path(@question.id + 1), method: "post") do %>
                <input name="start_date" type="hidden" value=<%= params[:start_date] %> />
