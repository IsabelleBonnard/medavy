<div class=" text-center features">
  <div class="row">

    <div class="col-xs-12 col-sm-4 col-md-2 col-md-offset-1">
      <%= link_to cl_image_path(@exterior_ids.first), :class => "swipebox", :alt => "image", :title => t('gallery.exterior') do %>
        <div class="card-video">
          <i class="fi-foot"></i>
          <h4> <%= t('gallery.exterior') %></h4>
        </div>
      <% end %>
      <% @exterior_ids[1..-1].each do |id| %>
        <div class="col-xs-4 col-sm-3">
          <div class="hidden cl-image-container">
            <%= link_to cl_image_path(id), :class => "swipebox cl-image-pages", :alt => "image", :title => t('gallery.exterior') do %>
              <div> <%= cl_image_tag(id) %> </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>

    <div class="col-xs-12 col-sm-4 col-md-2">
      <%= link_to gallery_interiors_path do %>
        <div class="card-video">
          <i class="fi-crown"></i>
          <h4><%= t('gallery.interiors')%></h4>
        </div>
      <% end %>
    </div>

    <div class="col-xs-12 col-sm-4 col-md-2">
      <%= link_to gallery_work_path do %>
        <div class="card-video">
          <i class="fi-flag"></i>
          <h4><%= t('gallery.work')%></h4>
        </div>
      <% end %>
    </div>

    <div class="col-xs-12 col-sm-4 col-sm-offset-2 col-md-offset-0 col-md-2">
      <%= link_to gallery_SkyViews_path do %>
        <div class="card-video">
          <i class="fi-play"></i>
          <h4><%= t('gallery.sky_views')%></h4>
        </div>
      <% end %>
    </div>

    <div class="col-xs-12 col-sm-4 col-md-2">
      <%= link_to gallery_MedavyByNight_path do %>
        <div class="card-video">
          <i class="fi-lightbulb"></i>
          <h4><%= t('gallery.medavy_by_night')%></h4>
        </div>
      <% end %>
    </div>

  </div>
</div>
